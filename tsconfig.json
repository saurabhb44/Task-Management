{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "declarationDir": "./typings",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "typeRoots": ["./src/@types"],
        "useDefineForClassFields": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/test/**/*.ts"]
}
